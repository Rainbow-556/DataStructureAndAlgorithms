<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_level_order_traversal"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="二叉树广度遍历"/>
        <Button
            android:id="@+id/btn_pre_order_traversal"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="二叉树先序遍历(非递归)"/>
        <Button
            android:id="@+id/btn_middle_order_traversal"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="二叉树中序遍历(非递归)"/>
        <Button
            android:id="@+id/btn_last_order_traversal"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="二叉树后序遍历(非递归)"/>
    </LinearLayout>
</ScrollView>